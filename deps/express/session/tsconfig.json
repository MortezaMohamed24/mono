{
  "display": "Node 12",
  "include": ["src/index.ts"],
  "exclude": ["node_modules/"],
  "compilerOptions": {
    "lib": ["es2021"],
    "strict": true,
    "module": "ES2020",
    "target": "es2019",
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
  }
}