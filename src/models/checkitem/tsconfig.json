{
  "display": "Node 12",
  "include": ["src/index.ts"],
  "compilerOptions": {
    "lib": ["es2021"],
    "strict": true,
    "module": "ES2020",
    "target": "es2019",
    "baseUrl": ".",
    "paths": {
      "user*/": ["user/dist/*"],
      "list*/": ["list/dist/*"],
      "card*/": ["card/dist/*"],
      "board*/": ["board/dist/*"],
      "label*/": ["label/dist/*"],
      "checklist*/": ["checklist/dist/*"],
    },
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
  }
}