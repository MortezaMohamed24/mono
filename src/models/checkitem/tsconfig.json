{
  "display": "Node 12",
  "include": [
    "src/*",
    "src/*/*",
    "src/*/*/*",
  ],
  "exclude": [
    "dist/",
    "node_modules/",
  ],
  "compilerOptions": {
    "lib": ["es2021"],
    "strict": true,
    "module": "ES2020",
    "target": "es2019",
    "baseUrl": ".",
    "paths": {
      "user/*": ["./node_modules/user/dist/*"],
      "list/*": ["./node_modules/list/dist/*"],
      "card/*": ["./node_modules/card/dist/*"],
      "board/*": ["./node_modules/board/dist/*"],
      "label/*": ["./node_modules/label/dist/*"],
      // "checklist/*": ["./node_modules/checklist/dist/*"],
    },
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
  }
}